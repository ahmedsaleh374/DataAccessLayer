@model CreateEditRoleVM
<div class="row justify-content-center align-content-center mt-3">
	<h1 class="col-8 my-4">Create Role</h1>

	<form method="post" asp-controller="Role" asp-action="Create" class="col-8">

		<div asp-validation-summary="All" class="text-bg-danger"></div>

		<div class="form-group mb-3">
			<label class="form-label" asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mt-4 m-auto">
			<input class="btn btn-primary" type="submit" value="Create" />
			<a asp-controller="Role" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
		</div>
	</form>
</div>

