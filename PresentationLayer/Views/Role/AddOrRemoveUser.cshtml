@model List<UserInRoleVM>

@{
    ViewData["Title"] = "Add or Remove User";
    var roleId = ViewBag.RoleId;
}

<h2>Add Or Remove Users</h2>

<form class="my-3" method="post" asp-controller="Role" asp-action="AddOrRemoveUser" asp-route-id="@roleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-group form-check">
            <input asp-for="@Model[i].isSelected" class="form-check-input" />
            <label asp-for="@Model[i].isSelected" class="form-check-label">
                @Model[i].UserName
            </label>

            <input type="hidden" asp-for="@Model[i].Id" />
            <input type="hidden" asp-for="@Model[i].UserName" />
        </div>
    }

    <div class="my-3">
        <input type="submit" value="Edit" class="btn btn-success" />
        <a asp-action="Edit" asp-controller="Role" asp-route-id="@roleId" class="btn btn-light">Cancel</a>
    </div>
</form>

