@model IEnumerable<IdentityRole>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All Roles</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create Role</a>
<br />
<br />
@if (Model?.Count() > 0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(model => model.Id)</th>
				<th>@Html.DisplayNameFor(model => model.Name)</th>
				<th>Detail</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(modelItem => item.Id)</td>
					<td>@Html.DisplayFor(modelItem => item.Name)</td>

					<td>
						<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">
							<i class="fas fa-eye"></i> Details
						</a>
					</td>
					<td>
						<a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">
							<i class="fas fa-edit"></i> Edit
						</a>
					</td>
					<td>
						<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
							<i class="fas fa-trash"></i>Delete
						</button>
						<!--modal delete-->
						<div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">Delete Role</h1>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										Are You sure to delete Role with Name @item.Name?
									</div>
									<div class="modal-footer">
										<form method="post" asp-action="Delete" asp-controller="Role" asp-route-id="@item.Id" class="mt-4">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
											<input type="submit" class="btn btn-danger" value="Delete" />
										</form>
									</div>
								</div>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div class="alert alert-warning">
		<h4>No Users Found!!</h4>
	</div>
}