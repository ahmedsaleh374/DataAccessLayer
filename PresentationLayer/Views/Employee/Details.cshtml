@model DetailsEmployeeDto
<h1 class="my-5 w-75">Employee Details</h1>
@if (!string.IsNullOrEmpty(Model.Image))
{
	<div>
		<img class="img-fluid rounded-circle" src="~/files/images/@Model.Image" alt="Attachment" />
	</div>
}
else
{
	<p>No Image Available</p>
}
<div class="tab-pane fade show active p-4 border" id="general" role="tebpanel" aria-labelledby="general">
	<div class="row">

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Id"></label>
			<input class="form-control" asp-for="Id" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Name"></label>
			<input class="form-control" asp-for="Name" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Email"></label>
			<input class="form-control" asp-for="Email" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Address"></label>
			<input class="form-control" asp-for="Address" readonly />
		</div>
@* 
		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Phone"></label>
			<input class="form-control" asp-for="Phone" readonly />
		</div> *@

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Age"></label>
			<input class="form-control" asp-for="Age" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Department"></label>
			<input class="form-control" asp-for="Department" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="HireDate"></label>
			<input class="form-control" asp-for="HireDate" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Salary"></label>
			<input class="form-control" asp-for="Salary" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="Gender"></label>
			<input class="form-control" asp-for="Gender" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="form-label" asp-for="EmployeeType"></label>
			<input class="form-control" asp-for="EmployeeType" readonly />
		</div>

		<div class="form-group mb-3 col-6">
			<label class="col-form-label" asp-for="IsActive"></label>
			<input class="form-check-input" asp-for="IsActive" disabled />
		</div>

	</div>
</div>

<div class="mt-4">
	<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
	<a asp-action="Index" class="btn btn-outline-dark">Back to list</a>
</div>