@model UpdateDepartmentDto
<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Department</h1>

    <form method="post" asp-controller="Department" asp-action="Edit" class="col-8">

        <div asp-validation-summary="All" class="text-bg-danger"></div>

        <partial name="_DepartmentEditPartialView"></partial>

        <div class="mt-4 m-auto">
            <input class="btn btn-primary" type="submit" value="Save" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>
@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}