@{
    ViewBag.Title = "Access Denied";
    Layout = "";
}

<div class="container d-flex flex-column justify-content-center align-items-center" style="height: 80vh;">
    <div class="card shadow-lg border-0 p-4 text-center" style="max-width: 500px; width: 100%;">
        <div class="card-body">
            <img src="https://cdn-icons-png.flaticon.com/512/1828/1828665.png" alt="Access Denied" style="width: 80px;" class="mb-3" />
            <h2 class="text-danger mb-3">Access Denied</h2>
            <p class="text-muted">
                Sorry, you don't have permission to access this page.<br />
                Please contact the administrator if you believe this is a mistake.
            </p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
                <i class="bi bi-house-door"></i> Return to Home
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons (اختياري) -->
