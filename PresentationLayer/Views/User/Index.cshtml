@model IEnumerable<ApplicationUser>
<h1>All Users</h1>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="User">
	<div class="row">
		<div class="col-sm-8">
			<input placeholder="Search by Email" name="searchInput" class="form-control"/>
		</div>
		<div class="col-sm-4">
			<input type="submit" value="Search" class="btn btn-success btn-block" />
		</div>
	</div>
</form>
@if (Model?.Count()>0)
{
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>@Html.DisplayNameFor(m =>m.Id)</th>
				<th>@Html.DisplayNameFor(m =>m.UserName)</th>
				<th>@Html.DisplayNameFor(m =>m.Email)</th>
				<th>Details</th>
				<th>Update</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@Html.DisplayFor(m => item.Id)</td>
					<td>@Html.DisplayFor(m => item.UserName)</td>
					<td>@Html.DisplayFor(m => item.Email)</td>
					<td>
						<a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">
							<i class="fas fa-eye"></i> Details
						</a>
					</td>
					<td>
						<a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">
							<i class="fas fa-edit"></i> Edit
						</a>
					</td>
					<td>
						<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.Id">
							<i class="fas fa-trash"></i>Delete
						</button>
						<!--modal delete-->
						<div class="modal fade" id="deleteModal-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content">
									<div class="modal-header">
										<h1 class="modal-title fs-5" id="exampleModalLabel">Delete User</h1>
										<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
									</div>
									<div class="modal-body">
										Are You sure to delete user with userName @item.UserName?
									</div>
									<div class="modal-footer">
										<form method="post" asp-action="Delete" asp-controller="User" asp-route-id="@item.Id" class="mt-4">
											<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
											<input type="submit" class="btn btn-danger" value="Delete" />
										</form>
									</div>
								</div>
							</div>
						</div>
					</td>
				</tr>
			}
		</tbody>

	</table>
}
else
{
	<div class="alert alert-warning">
		<h4>No Users Found!!</h4>
	</div>
}